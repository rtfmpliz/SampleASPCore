        </div>
        <div class="form-group">

            <input type="radio" name="rdOperator" value="Tambah" />Tambah
            <input type="radio" name="rdOperator" value="Kurang" />Kurang

        </div>

        <div class="form-group">

            <label for="hasil">Hasil :</label>
            <input type="number" name="hasil" value="@ViewBag.hasil" />
        </div>
    
        <button type="submit" class="btn btn-default">Hitung</button>
